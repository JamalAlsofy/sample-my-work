{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-demo/care-ui-lib": ["libs/care-ui-lib/src/index.ts"],
      "@angular-demo/cdnlib": ["cdnlib/src/index.ts"],
      "@angular-demo/critical-importer": [
        "libs/critical-importer/src/index.ts"
      ],
      "@angular-demo/critical-state": ["libs/critical-state/src/index.ts"],
      "@angular-demo/critical-ui": ["libs/critical-ui/src/index.ts"],
      "@angular-demo/glob-state": ["libs/glob-state/src/index.ts"],
      "@angular-demo/shared-state": ["libs/shared-state/src/index.ts"],
      "@angular-demo/utils": ["libs/utils/src/index.ts"],
      "@my-org/my-lib": ["libs/care-lib/src/index.ts"],
      "merchant/Routes": ["merchant/src/app/remote-entry/entry.routes.ts"],
      "shop/Routes": ["shop/src/app/app.routes.ts"],
      "store/Routes": ["store/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
